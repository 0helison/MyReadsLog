<form action="/book/updatebook" method="POST" class="form">
    <h1>Edite seu Livro</h1>
    <input type="hidden" name="id" value="{{book.id}}">

    <div class="form-control">
        <label for="book_name">Nome do Livro:</label>
        <input type="text" name="book_name" placeholder="Informe o nome do livro" value="{{book.book_name}}">
    </div>

    <div class="form-control">
        <label for="author">Nome do Autor:</label>
        <input type="text" name="author" placeholder="Informe o nome do autor" value="{{book.author}}">
    </div>

    <div class="form-control">
        <label for="total_pages">Número de páginas:</label>
        <input type="number" name="total_pages" placeholder="Informe o nº de páginas" value="{{book.total_pages}}">
    </div>

    <input type="submit" id="submit" value="Editar">
</form>